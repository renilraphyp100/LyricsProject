<h1>View Album</h1>
<p>
  <strong>Name:</strong>
  <%= @album.name %>
</p>

<p>
  <strong>Artist:</strong>
  <%= @album.artist.name if @album.artist_id? %>
</p>
 
<p>
  <strong>Description:</strong>
  <%= @album.description %>
</p>

<p>
  <%= image_tag(@album.picture.url, size: "250x150") if @album.picture? %>
</p>


<hr>    
    <h2>Comments</h2>
    <% @album.comments.each do |comment| %>
      <p>
        <strong><%= comment.user.email %>:</strong>
        <%= comment.comment %>
      </p>
    <% end %>
    
  <hr> 
  <h3>Add a comment:</h3>
  <%= form_for [@album, Comment.new] do |f| %>

    <p>
      <%= f.label :comment %><br>
      <%= f.text_area :comment %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
  

<%= link_to 'Back', albums_path %>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
<script>
$(document).ready(function(){
    $("#new_comment input[name=commit]").on('click',function(e){
      e.preventDefault();
      comment = $('textarea#comment_comment').val();
      if (comment.trim().length > 0) {
        $("#new_comment").submit();
        return true;
      }
      else{
        $("#comment_comment").css("border","1px solid #a94442").css("border-radius","4px");
      }
    });
});
</script>