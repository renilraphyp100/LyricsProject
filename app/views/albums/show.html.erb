<h1>View Album</h1>
<p>
  <strong>Name:</strong>
  <%= @album.name %>
</p>
 
<p>
  <strong>Description:</strong>
  <%= @album.description %>
</p>

<p>
  <%= image_tag(@album.picture.url, size: "250x150") if @album.picture? %>
</p>


<hr>    
    <h2>Comments</h2>
    <% @album.comments.each do |comment| %>
      <p>
        <strong><%= comment.user.email %>:</strong>
        <%= comment.comment %>
      </p>
    <% end %>
    
  <hr> 
  <h3>Add a comment:</h3>
  <%= form_for [@album, Comment.new] do |f| %>

    <p>
      <%= f.label :comment %><br>
      <%= f.text_area :comment %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
  

<%= link_to 'Back', albums_path %>