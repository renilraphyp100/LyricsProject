<h1>Editing Album</h1>
 
<%= form_for :album, url: album_path(@album), method: :patch, html: { multipart: true } do |f| %>
  
  <%= render :partial => "layouts/error", :locals => {:object => @album} %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control" %>
  </p>
  
  <p class="picture">
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back', albums_path %>